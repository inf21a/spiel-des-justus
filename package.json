{
  "name": "spiel-des-justus",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "start:server": "node -r esm dist/server/server.js",
    "dev": "tsc -p tsconfig.server.json && concurrently 'vite' 'tsc -w -p tsconfig.server.json' 'nodemon -r esm dist/server/server.js'"
  },
  "dependencies": {
    "boardgame.io": "^0.49.12",
    "esm": "^3.2.25",
    "phaser": "3.55.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^1.3.0",
    "concurrently": "^7.2.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3",
    "vite": "^2.9.7"
  }
}
